    foreach($items as $delta => $item) {
      if(!empty($item['id'])) {
        if(!is_int($item['id']+0)) {
          $errors[$field['field_name']][$langcode][$delta][] = array(
            'error' => 'kmap_id_invalid',
            'message' => t('KMap ID must be a number. ' . $item['id']),
          );
        }
      }
    }   
  } 
}

