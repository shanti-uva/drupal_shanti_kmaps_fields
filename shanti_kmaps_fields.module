function shanti_kmaps_fields_field_formatter_view($entity_type, $entity, $field, $instance, $langcode, $items, $display) {
  $settings = $display['settings']; // Key needs to be defined in info array (who knew?)
  $element = array();
  if ($display['type'] == 'kmap_simple_formatter') {
    foreach ($items as $delta => $item) {
      $element[$delta]['#markup'] = '<p>' . t($item['raw']) . '</p>';
    }
  } 
  elseif ($display['type'] == 'kmap_default_formatter') {
    $target = $settings['target'];
    foreach ($items as $delta => $item) {
      $domain = $field['settings']['kmap_domain'];
      $title = _shanti_kmaps_fields_decode_path($item['path']);
      $element[$delta]['#markup'] = "<a href=\"http://{$domain}.kmaps.virginia.edu/features/{$item['id']}\" title=\"{$title}\" target=\"{$target}\">{$item['header']}</a>";
    }
  }
  elseif ($display['type'] == 'kmap_popover_formatter') {
    $target = $settings['target'];
    foreach ($items as $delta => $item) {
      $domain = $field['settings']['kmap_domain'];
      $info = shanti_kmaps_fields_kmaps_get_info($domain, $item['id']);
      $desc = t('For more information about this term, see Full Entry below.');
      if ($info->feature->nested_descriptions[0]->title) {
        $desc = $info->feature->nested_descriptions[0]->title;
      };
      $path = _shanti_kmaps_fields_decode_path($item['path'], '/');
      $ancestors = array();
      foreach($info->feature->ancestors as $a) {
        $id = $a->id;
        $title = $a->header;
        $url = str_replace('__KMAPID__',$id,variable_get('shanti_kmaps_fields_server_'.$domain.'_explorer'));
        $ancestors[] = "<a target='_blank' href='$url'>$title</a>";
      }
      array_pop($ancestors); // Because the last is the same is the current
      $external_url = str_replace('__KMAPID__',$item['id'],variable_get('shanti_kmaps_fields_server_'.$domain.'_explorer'));
      $internal_url = 'alltexts/'.$item['id']; // DEPENDENCY ON VIEW
      
      $element[$delta] = array(
        '#type' => 'container',
        '#attributes' => array('class' => 'shanti-kmaps-fields-term-popover'),
      );
      $element[$delta]['label'] = array(
        '#markup' => "<span>{$item['header']}</span>",
      );
      $element[$delta]['popover_link'] = array(
        '#type' => 'html_tag',
        '#tag' => 'span',
        '#value' => '<span><i class="icon shanticon-menu3"></i></span>', // DEPENDENCY ON THEME
        '#attributes' => array('class' => 'popover-link'),
      );
      $element[$delta]['popover'] = array(
        '#type' => 'container',
        '#attributes' => array('class' => 'popover'),      
      );
      $element[$delta]['popover']['title'] = array(
        '#type' => 'html_tag',
        '#tag' => 'h5',
        '#value' => $item['header'],
      );
      $element[$delta]['popover']['description'] = array(
        '#type' => 'html_tag',
        '#tag' => 'p',
        '#value' => $desc,
      );
      $element[$delta]['popover']['parents'] = array(
        '#type' => 'container',
        '#attributes' => array('class' => array('parents')),
        '#prefix' => count($ancestors) ? '<strong>Parent '. ucfirst($item['domain']) .'</strong> ' : '',
      ); 
      $element[$delta]['popover']['parents']['links'] = array(
        '#markup' => join(' / ', $ancestors),
      );
      $element[$delta]['popover']['popover_footer'] = array(
        '#type' => 'container',
        '#attributes' => array('class' => 'popover-footer'),
      );
      // More dependencies here ...
      $element[$delta]['popover']['popover_footer']['links'] = array(
        '#theme' => 'item_list',
        '#type' => 'ul',
        '#items' => array(
          '<i class="icon shanticon-link-external"></i>' . l('Full Entry', $external_url,array('attributes' => array('target' => '_blank'))),
          '<i class="icon shanticon-texts"></i>' . l('Related Texts', $internal_url),
        ),
      );
    }
  }
  return $element;
}
